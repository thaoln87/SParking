<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.tma.sparking.NavigationDrawerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height_160"
        android:background="@color/primary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_nav_header_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_17"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingTop="@dimen/layout_padding_30"
            android:paddingLeft="@dimen/layout_padding_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_nav_header_ion_profile"
                android:layout_width="@dimen/nav_header_icon_size_60"
                android:layout_height="@dimen/nav_header_icon_size_60"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@drawable/bg_circle_radius"
                android:src="@drawable/ic_person_white_48dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_nav_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:gravity="left"
                android:text="Thao Le"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_size_20"/>
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/menu_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:listSelector="@drawable/menu_list_selector"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/primary"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/layout_padding_40"
        android:layout_height="@dimen/nav_footer_height">
        <ImageView
            android:layout_width="@dimen/nav_header_menu_item_size"
            android:layout_height="@dimen/nav_header_menu_item_size"
            android:src="@drawable/ic_local_phone_white_24dp"
            android:padding="@dimen/layout_padding_5" />
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_15"
            android:text="0909 39 39 39"/>
    </LinearLayout>
</LinearLayout>
