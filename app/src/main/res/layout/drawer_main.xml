<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.tma.sparking.NavigationDrawerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height_160"
        android:background="@color/primary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_nav_header_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_nav_header_ion_profile"
                android:layout_width="@dimen/nav_header_icon_size_70"
                android:layout_height="@dimen/nav_header_icon_size_70"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_10"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_nav_header_ion"
                android:layout_width="@dimen/nav_header_icon_size_70"
                android:layout_height="@dimen/nav_header_icon_size_70"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/bg_circle_radius"
                android:clickable="true"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_nav_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:gravity="center"
                android:text="THAO LE"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"/>
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/menu_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:listSelector="@drawable/menu_list_selector"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>
</LinearLayout>
